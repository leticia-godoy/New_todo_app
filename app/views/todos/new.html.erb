<h1>Create your own To do list!</h1>
<h2>Insert new action</h2>

<% if @todo.errors.any? %>
    <h3>Incomplete Action</h3>
    <ul>
        <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%=form_for @todo do |f| %>
    
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p> 

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p> 

    <p>
        <%= f.submit %>
    </p>    
        
<% end %>